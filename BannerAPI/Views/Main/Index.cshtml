<!--Här hade vi kunnat kört viewimports och importerat name-spacet iställer för att skriva ut hela namespacet.-->
@model BannerAPI.Models.Banner

<h1>Hej!</h1>
<div class="intro-container">
    <p>Här kommer lite exempel på anrop ni kan köra, jag körde med postman</p>

    <p>get: <span>/banner?id=1</span> -- GET</p>
    <p>create: <span>/banner/create</span> -- POST: form-data eller raw body json</p>
    <p>update: <span>/banner/update</span> -- POST: form-data eller raw body json, kräver id</p>
    <p>delete: <span>/banner/delete</span> -- POST: form-data eller raw body json, kräver id</p>
    <p>hämta alla banners: <span>/banner/all</span> -- GET</p>
</div>


<form action="/banner/create" method="post" class="form-container m-t-4">
    <h4 class="z-m">CREATE</h4>
    <label>Html</label>
    <input type="text" name="html" />
    <input type="submit" value="Submit" />
</form>

<form action="/banner/update" method="post" class="form-container m-t-4">
    <h4 class="z-m">Update</h4>
    <label>Html</label>
    <input type="text" name="html" />
    <label>Id</label>
    <input type="number" name="id" />
    <input type="submit" value="Submit" />
</form>

<form action="/banner/delete" method="post" class="form-container m-t-4">
    <h4 class="z-m">DELETE</h4>
    <label>Id</label>
    <input type="number" name="id" />
    <input type="submit" value="Submit" />
</form>

<div class="m-t-4">
    <p>Testa att posta med js.</p>
    <button data-post>Posta med javascript</button>
</div>

<div class="m-t-4">
    <p class="z-m">Här slumpar jag ut en banner!</p>
    @Html.Raw(Model.Html)
</div>




